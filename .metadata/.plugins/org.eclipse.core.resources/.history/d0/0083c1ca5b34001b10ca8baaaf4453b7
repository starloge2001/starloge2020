package ex1;

public class ex2 {

	public static void main(String[] args) {
		
		int k;
		int e;
		int m;
		int s;
		
		k = 90;
		e = 80;
		m = 70;
		s = 60;
		
		System.out.println("국어 : " + k);
		System.out.println("영어 : " + e);
		System.out.println("수학 : " + m);
		System.out.println("과학 : " + s);
		
		int s;
		double a;
		s = k+e+m+s;
		a = s / 4.0;
		
		System.out.println("총점 : " + s);
		System.out.println("평균 : " + a);
				
	}

}
