package ldjex;

import java.util.Scanner;

public class Ex3 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int a = s.nextInt();
		for(int i=0;i<a;i++) {
			for(int j=(a-1);j>0;j--) {
				System.out.print(" ");
			}
			for(int k=(a*2)-1;k>0;k--) {
				System.out.print("*");
			}
			for(int j=(a-1);j>0;j--) {
				System.out.print(" ");				
			}
			System.out.println("");
		}
	}

}
