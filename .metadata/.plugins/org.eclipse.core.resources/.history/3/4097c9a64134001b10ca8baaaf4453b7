
public class Variable2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String line =  "------------------------";
		String title = "    개인   신상   정보    ";
		String name =  "   윤현철    ";
		char a = '남';
		int age = 37;
		float b= 97.6;
		float c = 173.4;
		String ad = " 대구 북구 산격동";
		System.out.println(line);
		System.out.println(title);
		System.out.println(line);
		System.out.println("1. 이름  : " + name);
		System.out.println("2. 나이  :     " + age );
		System.out.println("3. 성별  :     " + a);
		System.out.println("4. 몸무게 :   " + b + "kg");
		System.out.println("5.  키   :  " + c + "cm");
		System.out.println("6. 주소  : " + ad);
		System.out.println(line);
	}

}
